<div id="main-table">
<section>
    <h2>Your expenses : <span id="expense-total">{{totalExp}}</span><span>&nbsp;</span>€</h2>
    <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each expenses}}
            <tr>
                <td>
                    <p>{{EuformatDate this.date}}</p>
                </td>
                <td><a href="/expenses/details/{{this._id}}">
                        <p class="title">{{this.title}}</p>
                    </a></td>
                <td>
                    <p class="cat-and-src">{{this.category}}</p>
                </td>
                <td>
                    <p class="amount"><span class="dom-amount-expenses">{{this.amount}}</span><span>&nbsp;</span>€</p>
                </td>
                <td class="actions-btn">
                    <div class="actions btnExpenses">
                        <a href="/expenses/update/{{this._id}}"><i class="fas fa-pen"></i></a>
                        <a href="/expenses/delete/{{this._id}}"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a class="go-back" href="/home"><i class="fas fa-arrow-alt-circle-left"></i>Back</a>
</section>
<div>
