<section id="create-container">
    <div class="create-container">
        <h2 class="createTitle">Made a mistake ? Edit it !</h2>
        <form method="post" action="/incomes/edit/{{incomeDetails._id}}" class="formCreate"
            enctype="multipart/form-data">

            <label for="title">Title</label>
            <input name="title" id="title" type="text" value="{{incomeDetails.title}}">

            <label for="source">Income source</label>
            <select name="source" id="source" type="text">
                {{#select incomeDetails.source}}
                <option value="Main Income">Main Income</option>
                <option value="Secondary Income">Secondary Income</option>
                <option value="Other">Other</option>
                {{/select}}
            </select>

            <label for="amount">Amount</label>
            <input name="amount" id="amount" type="number" min="1" max="1000000000" value="{{incomeDetails.amount}}">

            <label for="date">Date</label>
            <input name="date" id="date" type="date" value="{{formatDate incomeDetails.date}}">

            <label for="description">Modify the description</label>
            <textarea name="description" id="description" type="text">{{incomeDetails.description}}</textarea>

            <div class="fileUpload">
                <label for="picture">Upload a file</label>
                <input name="picture" id="picture" type="file">
            </div>

            <button class="createBtn" type="submit">Update</button>
        </form>
    </div>
</section>
{{> modalAddAll}}