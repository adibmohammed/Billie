<h2>Your incomes</h2>


<table>
    <thead>
        <th>Title</th>
        <th>Source</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Actions</th>
    </thead>
    {{#each incomes}}
    <tbody>
        <td>{{this.title}}</td>
        <td>{{this.source}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.date}}</td> {{!Date format isn't good, still have the UNIX format!}}
        <td>
            <div class="btnIncomes">
                <a href="/incomes/edit/{{this._id}}"><i class="fas fa-pen"></i></a>
                <a href="/incomes/delete/{{this._id}}"><i class="fas fa-trash"></i></a>
        </td>
    </tbody>
    {{/each}}
</table>


<div><a href="/income/new">Add an income</a></div>