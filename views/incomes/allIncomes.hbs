<section>
    <h2>Your incomes</h2>

    <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Source</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each incomes}}
            <tr>
                <td>
                    <p>{{EuformatDate this.date}}</p>
                </td>
                <td><a href="/incomes/details/{{this._id}}">
                        <p class="title">{{this.title}}</p>
                    </a></td>
                <td>
                    <p class="cat-and-src">{{this.source}}</p>
                </td>
                <td>
                    <p class="amount">{{this.amount}}<span>&nbsp;</span>â‚¬</p>
                </td> {{!-- The weird span is for adding an unbreakable space --}}
                <td class="actions-btn">
                    <div class="actions btnIncomes">
                        <a href="/incomes/edit/{{this._id}}"><i class="fas fa-pen"></i></a>
                        <a href="/incomes/delete/{{this._id}}"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a class="go-back" href="/home"><i class="fas fa-arrow-alt-circle-left"></i>Back</a>
</section>
{{> modalAddAll}}