<h1>All expenses</h1>
<table class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Category</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each expenses}}
        <tr>
            <td>{{this.date}}</td>
            <td>{{this.title}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td>{{this.amount}}</td>
            <td>{{this.picture}}</td>
            <td>
                <div class="btnExpenses">
                    <a href="/expenses/expense-update/{{this._id}}"><i class="fas fa-pen"></i></a>
                    <a href="/expenses/expense-delete/{{this._id}}"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>